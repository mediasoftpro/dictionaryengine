@inject IStringLocalizer<GeneralResource> GeneralResource
@{
    var SearchViewPath = "~/Views/shared/_Search.cshtml";
    var RecentViewPath = "~/Views/glossary/partials/_Rec.cshtml";

}

<aside class="box sidebar">
    @await Html.PartialAsync(SearchViewPath, new SearchListModel()
    {
        HeadingTitle = GeneralResource["_search"].Value,
        Action = "/search/wiki",
        PlaceHolder = GeneralResource["_search_keywords"].Value,
        showAdvanceSearch = false
    })


    @await Html.PartialAsync("~/Views/partials/ads/ad_336.cshtml", new AdsModelView() { isAdult = false })


    <div class="m-b-5">
        @await Html.PartialAsync(RecentViewPath)
    </div>

</aside>